<link rel="stylesheet" href="/css/index.css">
<title>Sign up for Band Aid</title>
<!--------------------------------------------------- Sign Up --------------------------------------------------------->
<div class="bg">
    <br /><br />
    <div class="container forms.container">
        <div class="col-md-6 mx-auto shadow-border form-bg">
            <h1>Create Band Aid Account</h1>
            <form id="create_user_profile" action="/sign_up" method="post">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label>First Name:</label>
                        <input type="text" class="form-control" name="fname" placeholder="First Name" required>
                    </div>
                    <div class="form-group col-md-6">
                        <label>Last Name:</label>
                        <input type="text" class="form-control" name="lname" placeholder="Last Name" required>
                    </div>
                </div>
                <label>Email:</label>
                <input type="text" class="form-control" name="email" placeholder="yourEmail@address.com" required>
                <label>Phone Number:</label>
                <input type="number" class="form-control" name="phone" placeholder="123456789" required>
                <label>Zip Code:</label>
                <input type="number" class="form-control" name="zip" placeholder="5 digit zip" required>
                <div class="form-row">
                    <div class="form-group col-md-6 ">
                        <label>Instrument</label>
                        <select name="insName" class="form-control">
                            {{#each instruments}}
                            <option value="{{id}}">{{insName}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="form-group col-md-6 ">
                        <label>Skill Level</label>
                        <select name="proficiency" class="form-control">
                            {{#each proficiencies}}
                            <option value="{{id}}">{{insProficiency}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>
                <label>Social Media:</label>
                <input type="url" class="form-control" name="social" placeholder="www.yourSocialMedia.com">
                <label>Demo Link:</label>
                <input type="url" class="form-control" name="demo_link" placeholder="www.yourDemo.com">
                {{!-- <input type="checkbox" class="form-control" name="lfg"> Are you looking to join a band?</input> --}}
    
    <input type="checkbox" class="form-check-input" id="lfg" name="lfg">
    <label class="form-check-label" for="lfg">Are you looking to join a band?</label>

                <label>Password:</label>
                <input type="password" class="form-control" name="password" required>
            </form>
            </br>
            <button class="btn btn-block g-button" onclick="createProfile()">Create Profile</button>
            </br>
        </div>
    </div>
</div>