<title>What instrument are you looking for?</title>

<div class="bg">
    <!--------------------------------------------------- Instrument Selection Form --------------------------------------------------------->
    </br></br></br> <!----Temp Fix ---->

    <div class="container forms.container">
        <div class="row">
            <div class="col-md-4 mx-auto shadow-border form-bg">
                <form id="instrument_form" >
                    <div class="form-group">
                        <label for="instrument">What instrument are you looking for?</label>
                        <select class="form-control" id="instrumentSelect">
                            {{#each instruments}}
                                <option value="{{name}}">{{name}}</option>
                            {{/each}}
                        </select>
                        <br>
                    </div>
                </form>
                <button id="submit_btn" class="btn btn-default g-button">Next</button>
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById('submit_btn').addEventListener('click', function(){
        var instSelect = document.getElementById('instrumentSelect').value;
        localStorage.setItem('instrument', instSelect);
        window.location = '/search/q2/' + {{uid}};
    });
</script>
