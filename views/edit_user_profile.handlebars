<link rel="stylesheet" href = "/css/index.css">
<title>Update Account</title>

<!--------------------------------------------------- Edit Profile----------------------------------------------------->
<div class="bg">
    <br /><br />
    <div class="container forms.container">
        <div class="col-md-6 mx-auto shadow-border form-bg">
            <h1>Update Band Aid Account</h1>
                <form id="edit_user_profile" action="/user_profile method="post">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label>First Name:</label>
                            <input type="text" class="form-control" id="update_FirstName" value="{{user_profile.fname}}">
                    </div>
                    <div class="form-group col-md-6">
                        <label>Last Name:</label>
                            <input type="text" class="form-control" id="update_LastName" value="{{user_profile.lname}}">
                    </div>
                </div>
            <label>Email:</label>
                <input type="email" class="form-control" id="update_Email" value="{{user_profile.email}}">
                    <label>Phone Number:</label>
                        <input type="tel" class="form-control" id="update_phone" value="{{user_profile.phone}}" pattern="[0-9]{3}-[0-9]{2}-[0-9]{3}" >
                    <label>Zip Code:</label>
                        <input type="text" class="form-control" pattern="[0-9]{5}"id="update_Zip" value="{{user_profile.zip}}">
                <div class="form-row">
                    <div class="form-group col-md-6 ">
<!--------------------Need to update queries for musician and instruments---------------------------->
                        <label>Instrument</label>
                        <select id="inputInstrument" class="form-control">
                            <option> Choose...</option>
                            <option>Piano</option>
                            <option>Guitar</option>
                            <option>Flute</option>
                            <option>Saxophone</option>
                            <option>Bass</option>
                        </select>
                    </div>
                    <div class="form-group col-md-6 ">
                        <label>Skill Level</label>
                        <select id="inputSkill" class="form-control">
                            <option> Choose...</option>
                            <option>Amateur</option>
                            <option>Intermediate</option>
                            <option>Expert</option>
                        </select>
                    </div>
                </div>
            <label>Social Media:</label>
                <input type="email" class="form-control" id="update_Email" value="{{user_profile.social}}">
            </br>
            <div class="checkbox">
                    <label>
                        <input type="checkbox"> Are you looking to join a band?
                    </label>
                </div>
            </br>
           <button type="submit" class="btn btn-default send-button">Update Account</button>
            </br></br>
            Click <a href="/user_profile/edit/password/{{user_profile.id}}"">here</a> to change account password
            </form>
        </div>
    </div>
</div>